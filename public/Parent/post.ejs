<!--Student-->				
<h3>Post A Grievance</h3>

<form ng-submit="GrvPost()" ng-app="grievances" ng-controller="Student">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label class="control-labell"> Grevience Type</label>
            </div>
            <div class="col-sm-7">
                <select class="chosen form-control" ng-model="Gtype" required>
                    <!-- changes made by ankit sharma -->
                    <option value="">Select Grievance Type...</option>
                    <option ng-repeat="obj in grievance_type" value="{{obj.seq}}&{{obj.grvtype}}">{{obj.grvtype}}</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label class="control-label"> Subject</label>
            </div>
            <div class="col-sm-7">
                <textarea class="form-control" ng-model="subject" rows="3" data-val-required="The Description field is required." id="PostedDetails" name="PostedDetails" aria-required" maxlength="200" placeholder="(max 200 characters)" required></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label class="control-label"> Descripton</label>
            </div>
            <div class="col-sm-7">
                <textarea class="form-control" ng-model="Desc" rows="5" data-val-required="The Description field is required." id="PostedDetails" name="PostedDetails" aria-required" maxlength="3000" placeholder="(max 3000 characters)" required></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label class="control-label"> Files</label>
            </div>
            <div class="col-sm-7">
                <input class="form-control" ng-model="file" id="filecount" type="file" value="">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 offset-sm-2">
            <input class="btn btn-secondary" id="submit-grievance" type="submit" name="" value="Submit" >
        </div>
    </div>
</form>