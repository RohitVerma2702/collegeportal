	<!--Gcm-->
<div ng-app="grievances" ng-controller="Gcm">
	<h3>My Account</h3>
	<form class="form-horizontal" id="account-details" ng-submit="submit()">
			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label class="control-label"> Name </label>
					</div>
					<div class="col-sm-7">
						<input class="form-control" type="text" ng-model="name" readonly>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label class="control-label">Designation</label>
					</div>
					<div class="col-sm-7">
						<input class="form-control" type="text" ng-model="Desg" readonly>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label class="control-label">Grievance Type</label>
					</div>
					<div class="col-sm-7">
						<input class="form-control" type="text" ng-model="Gtype" readonly>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label class="control-label"> Email Id</label>
					</div>
					<div class="col-sm-7">
						<input class="form-control" type="text" ng-model="email" readonly>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-2">
						<label class="control-label"> Mobile Number</label>
					</div>
					<div class="col-sm-7">
						<input class="form-control" type="text" ng-model="mobile">
					</div>
				</div>
			</div>

			<div class="form-group">

				<div class="col-sm-7 offset-sm-2">
					<button class="btn btn-secondary" type="submit" id="student-details">Update</button>
				</div>

			</div>
	</form>
</div>