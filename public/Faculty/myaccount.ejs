<!--Parent-->
<div ng-app="grievances" ng-controller="Faculty">
	<h3>My Account</h3>
	<form class="form-horizontal" id="account-details" ng-submit="submit()">
		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Name </label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="name" readonly>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Employee Id </label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="id" readonly>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label">Gender</label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="gender" readonly>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Email Id</label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="email" readonly>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Department</label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="dep" readonly>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Designation</label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="Desig" readonly>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Mobile Number</label>
				</div>
				<div class="col-sm-7">
					<input class="form-control" type="text" ng-model="mobile" >
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-9 offset-sm-2">
				<button class="btn btn-secondary" type="submit" id="faculty-details">
					Update
				</button>
			</div>
		</div>
	</form>
</div>

<div id="loading">
	<div class="loader">
	</div>

	<h3>Loading...</h3>
</div>
