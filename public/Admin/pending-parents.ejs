<div ng-app="grievances" ng-controller="Admin_pending_user" ng-init="init('parent')">
    <h3>Pending Parents List</h3>
    <div id="pending_list" class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-inverse">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email ID</th>
                    <th>Ward_ID</th>
                    <th>Mobile No.</th>
                    <th>Relationship</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tr ng-repeat="user in users">
                    <td>{{$index+1}}</td>
                    <td>{{user.name}}</td>
                    <td>{{user.emailid}}</td>
                    <td>{{user.ward_id}}</td>
                    <td>{{user.mobileno}}</td>
                    <td>{{user.relation}}</td>
                    <td>
                    <button ng-click="Approve('Parent',user.emailid)" class="btn btn-success btn-sm">
                    Approve</button>
                    </td>
                </tr>
        </table>
    </div>
    <div id="loading">
        <div class="loader">
        </div>

        <h3>Loading...</h3>
    </div>

</div>
