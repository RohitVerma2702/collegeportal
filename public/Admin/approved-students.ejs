<div ng-app="grievances" ng-controller="Admin_apprv_user" ng-init="init('student')">
    <h3>Approved Students List</h3>
    <div id="apprv_list" class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-inverse">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Batch</th>
                    <th>Hall Ticket</th>
                    <th>Email ID</th>
                    <th>Mobile No.</th>
                   <th>Action</th>
                </tr>
            </thead>
            <tr ng-repeat="user in users">
                <td>{{$index+1}}</td>
                <td>{{user.name}}</td>
                <td>{{user.dep}}</td>
                <td>{{user.Batch}}</td>
                <td>{{user.id}}</td>
                <td>{{user.emailid}}</td>
                <td>{{user.mobileno}}</td>
                <td>
                <button ng-click="Deactivate_user('Student',user.emailid)" class="btn btn-danger btn-sm">
                    Deactivate
                </button>
            </td>
            </tr>
        </table>
    </div>
    <div id="loading">
        <div class="loader">
        </div>

        <h3>Loading...</h3>
    </div>

</div>
