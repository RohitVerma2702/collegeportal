<h3>Pending Grievance Redressal Report</h3>
<div  ng-app="grievances" ng-controller="Class_Type_report as vm">
    <form class="form-group" ng-submit="vm.pending()">
        <div class="row pb-1">
            <div class="col-xs-12">
                <label class="control-lable">From Date</label>
            </div>
            <div class="col-sm-7">
                <input type="date" ng-model="from_date" name="from_date" class="form-control" required>
            </div>
        </div>
        <div class="row pb-1">
            <div class="col-xs-12">
                <label class="control-lable">To Date</label>
            </div>
            <div class="col-sm-7">
                <input type="date" ng-model="to_date" name="to_date" class="form-control"  required>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12">
                 <label class="control-label">Course</label>
             </div>
             <div class="col-sm-7">
                 <select class="form-control" ng-model="Dep" name="Dep" required>
                     <option value="">Select</option>
                     <option value="First Year">B. Tech. - First Year</option>
                     <option value="CE">B. Tech. - Civil Engineering </option>
                     <option value="CS">B. Tech. - Computer Science Engineering</option>
                     <option value="ME">B. Tech. - Mechanical Engineering</option>
                     <option value="EE">B. Tech. - Electrical Engineering</option>
                     <option value="EC">B. Tech. - Electronics And Communication Engineering</option>
                 </select>
             </div>
         </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12">
                 <label class="control-label">Batch</label>
             </div>
             <div class="col-sm-7">
                 <select class="form-control" ng-model="Batch" name="Batch" required>
                    <option value="">Select</option>
                    <option value="First year">First Year</option>
                    <option value="Second year">Second Year</option>
                    <option value="Third year">Third Year</option>
                    <option value="Final year">Final Year</option>
                 </select>
             </div>
         </div>
        </div>
        <div row col-sm-7>
            <button type="submit" class="btn btn-secondary" name="">
                Create
            </button>
        </div>
    </form>
</div>